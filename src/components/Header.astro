---
import { SITE_TITLE } from '../consts'
---

<header>
  <h2>
    <a href="/">{SITE_TITLE}</a>
  </h2>
  <p class="subtitle">
    A small collection of things I make in the margins of ordinary days.
  </p>
</header>
<style>
  h2 {
    font-family: 'Oranienbaum', serif;
    font-size: 46px;
    color: var(--text);
    line-height: 1.1;
  }

  h2 a {
    display: inline;
    margin: 0;
    padding: 0;
  }

  .subtitle {
    font-style: italic;
    text-align: center;
    color: var(--accent);
  }

  .highlight {
    color: var(--accent);
  }

  header {
    width: calc(100% - 2em);
    display: flex;
    flex-direction: column;
    align-items: center;
    align-self: center;
    justify-content: center;
    padding: 40px 20px;
    border-bottom: 1px solid var(--text);
  }

  @media (min-width: 720px) {
    header {
      width: calc(100% - 10em);
      padding: 40px;
    }
  }
</style>
